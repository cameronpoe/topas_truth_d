ic:So/Tf/ActiveMaterial/Value/NumberOfHistoriesInRun = Tf/NumHistories/Value				# the number of particles that will be randomly distributed throughout the active material
b:So/Tf/ActiveMaterial/Value/RecursivelyIncludeChildren = "True"			
ic:So/Tf/ActiveMaterial/Value/MaxNumberOfPointsToSample = 1000000000			#1e9 points	

s:So/Tf/ActiveMaterial/Value/BeamEnergySpectrumType          = "Discrete"
dv:So/Tf/ActiveMaterial/Value/BeamEnergySpectrumValues       = 1 0 MeV		# currently set to 0 MeV so all the particles are at rest to begin
uv:So/Tf/ActiveMaterial/Value/BeamEnergySpectrumWeights      = 1 1.0		# defines the percentages of the particles at the respective energy value